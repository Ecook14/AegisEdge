# AegisEdge Environment Configuration

# --- AegisEdge Core ---
AEGISEDGE_PORT=8080
AEGISEDGE_UPSTREAM=http://localhost:3000
AEGISEDGE_L4_CONN_LIMIT=50
AEGISEDGE_L7_RATE_LIMIT=10.5

# --- Distributed State (Redis) ---
AEGISEDGE_REDIS_ADDR=localhost:6379
AEGISEDGE_REDIS_PASSWORD=

# --- Prometheus Connection ---
PROMETHEUS_METRICS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_STORAGE_RETENTION=15d

# --- Grafana Connection ---
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=aegisedge_secure_pass

# --- Ansible Automation ---
ANSIBLE_INVENTORY_PATH=./ansible/inventory.ini
ANSIBLE_USER=deploy_admin
ANSIBLE_SSH_KEY_PATH=~/.ssh/aegisedge_deploy
ANSIBLE_TRIGGER_THRESHOLD_L7=500  # Requests/sec to trigger auto-scaling
ANSIBLE_TRIGGER_THRESHOLD_L4=1000 # Concurrent connections to trigger blocking

# --- Webhook Notifiers ---
#AEGISEDGE_WEBHOOK_URL=https://hooks.slack.com 
